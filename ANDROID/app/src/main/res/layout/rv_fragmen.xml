<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/buku1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/mnomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="1."
                android:textColor="@color/font_color"
                android:textSize="18sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/mgambar"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bleach" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mJudul1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Bleach"
                    android:textColor="@color/font_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mPengarang1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="TiteKubo"
                    android:textColor="@color/font_color"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/mKategori1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/adamina"
                        android:text="Comic Book"
                        android:textColor="@color/font_color"
                        android:textSize="8sp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/ic_baseline_star_24"
                        app:tint="@color/primary_color"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/mrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="4.1"
                        android:textColor="@color/primary_color"
                        android:textSize="8sp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</layout>